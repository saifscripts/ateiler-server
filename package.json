{
    "name": "ateiler",
    "version": "1.0.0",
    "description": "An e-commerce website for sporting goods",
    "main": "./dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "lint": "npx eslint src --ignore-pattern .ts",
        "lint:fix": "npx eslint src --fix",
        "prettier": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
        "prettier:fix": "npx prettier --write src"
    },
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http-status": "^1.7.4",
        "mongoose": "^8.5.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "eslint": "^9.6.0",
        "prettier": "^3.3.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.3",
        "typescript-eslint": "^7.16.0"
    }
}
